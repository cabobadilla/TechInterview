{
  "name": "tech-interview-analyzer",
  "version": "1.0.0",
  "description": "Tech Architecture Interview Analyzer",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build-client": "cd client && npm install && npm run build",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "render-postbuild": "mkdir -p client/build && mkdir -p uploads && npm run build-client",
    "debug": "USE_FALLBACK=true node server.js",
    "debug-simplified": "SIMPLIFIED_MODE=true node server.js"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.2",
    "openai": "^3.2.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.21"
  }
} 